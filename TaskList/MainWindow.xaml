<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TaskList" x:Class="TaskList.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Name="Pool"  Grid.Row="0">
            <local:TaskShell/>
        </StackPanel>
        <Button Name="Add" Content="Add a Task Shell" VerticalAlignment="Bottom" HorizontalAlignment="Left" Grid.Row="1" Click="Add_Click"/>
    </Grid>
</Window>
